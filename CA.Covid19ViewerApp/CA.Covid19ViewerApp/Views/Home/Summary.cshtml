@using CA.Covid19ViewerApp.Models.Entities
@model summary
@{
    ViewBag.Title = "Summary";
    Layout = "~/Views/Shared/covidAppMaster.cshtml";
}
<div>
    <div class="panel panel-default">
        <div class="panel-heading">World Summary</div>
        <div class="panel-body">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="email">New Confirmed:</label>
                    <input disabled type="text" class="form-control" value="@Model.Global.NewConfirmed">
                </div>
                <div class="form-group">
                    <label for="pwd">New Deaths:</label>
                    <input disabled type="text" class="form-control" value="@Model.Global.NewDeaths">
                </div>
                <div class="form-group">
                    <label for="pwd">New Recovered:</label>
                    <input disabled type="text" class="form-control" value="@Model.Global.NewRecovered">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="email">Total Confirmed:</label>
                    <input disabled type="text" class="form-control" value="@Model.Global.TotalConfirmed">
                </div>
                <div class="form-group">
                    <label for="pwd">Total Deaths:</label>
                    <input disabled type="text" class="form-control" value="@Model.Global.TotalDeaths">
                </div>
                <div class="form-group">
                    <label for="pwd">Total Recovered:</label>
                    <input disabled type="text" class="form-control" value="@Model.Global.TotalRecovered">
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <table id="countryTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Country</th>
                <th>New Confirmed</th>
                <th>Total Confirmed</th>
                <th>New Deaths</th>
                <th>Total Deaths</th>
                <th>New Recovered</th>
                <th>Total Recovered</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Countries)
            {
                <tr>
                    <td>@item.Country</td>
                    <td>@item.NewConfirmed</td>
                    <td>@item.TotalConfirmed</td>
                    <td>@item.NewDeaths</td>
                    <td>@item.TotalDeaths</td>
                    <td>@item.NewRecovered</td>
                    <td>@item.TotalRecovered</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Country</th>
                <th>New Confirmed</th>
                <th>Total Confirmed</th>
                <th>New Deaths</th>
                <th>Total Deaths</th>
                <th>New Recovered</th>
                <th>Total Recovered</th>
            </tr>
        </tfoot>
    </table>
</div>

@section JavascriptExternal{
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#countryTable').DataTable();
        });
    </script>
}
